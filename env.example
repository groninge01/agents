# Polymarket 钱包私钥 (用于 API 交易)
POLYGON_WALLET_PRIVATE_KEY=""

# Polymarket 代理钱包地址 (用于卖出网页购买的订单)
# 可在 Polymarket 网页 Settings -> Connected Wallets 找到
POLYMARKET_PROXY_WALLET=""

# LLM 配置
LLM_PROVIDER=openai
OPENAI_API_KEY=""

# API Keys (可选)
TAVILY_API_KEY=""
NEWSAPI_API_KEY=""

# 止盈止损监控配置
TAKE_PROFIT_PCT=0.30        # 止盈百分比: 0.30 = 涨 30% 卖出
STOP_LOSS_PCT=0.15          # 止损百分比: 0.15 = 跌 15% 卖出
MONITOR_INTERVAL=1          # 检查间隔（秒），1 = 每秒轮询
AUTO_EXECUTE=true           # 是否自动执行交易 (true/false)，true = 自动卖出

