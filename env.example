# Polymarket wallet private key (for API trading)
POLYGON_WALLET_PRIVATE_KEY=""

# Polymarket proxy wallet address (used to sell orders bought via the website)
# You can find it on the Polymarket website: Settings -> Connected Wallets
POLYMARKET_PROXY_WALLET=""

# LLM configuration
LLM_PROVIDER=openrouter
OPENROUTER_API_KEY=""
OPENROUTER_HTTP_REFERER=""
OPENROUTER_APP_TITLE=""

# API Keys (optional)
TAVILY_API_KEY=""
NEWSAPI_API_KEY=""

# Take-profit/stop-loss monitor settings
TAKE_PROFIT_PCT=0.30        # Take profit percent: 0.30 = sell after +30%
STOP_LOSS_PCT=0.15          # Stop loss percent: 0.15 = sell after -15%
MONITOR_INTERVAL=1          # Check interval (seconds), 1 = poll every second
AUTO_EXECUTE=true           # Whether to auto-execute trades (true/false), true = auto-sell
